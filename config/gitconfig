[push]
	default = current
[mergetool]
	prompt = false
[merge]
	tool = fugitive
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
